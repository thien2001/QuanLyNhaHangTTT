@model QuanLyNhaHangTTT.Models.Sanpham

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Sanpham</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Tên món ăn
        </dt>

        <dd>
             @Model.Tên_món_ăn
        </dd>

        <dt>
           Số lượng
        </dt>

        <dd>
            @Model.Số_lượng
        </dd>

        <dt>
            Giá tiền
        </dt>

        <dd>
            @Model.Giá_tiền.ToString("N0") vnđ
        </dd>

        <dt>
           Mô tả
        </dt>

        <dd>
           @MvcHtmlString.Create(Model.Mô_tả)
        </dd>

        <dt>
          Tên loại SP
        </dt>

        <dd>
            @Model.Loaisanpham.Tên_loại_SP
        </dd>
        <dt>
            Hình ảnh
        </dt>
        <dd>
            <img src="@Url.Action("Picture", new {Model.Mã_SP })" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
