@model IEnumerable<QuanLyNhaHangTTT.Models.Chitietdonhang>

@{
    ViewBag.Title = "Index";
}

<section id="stCart">

    <div class="cart-page mt-50 mb-50">

        <div class="container">
            <div class="headingPage">
                <h1 class="titlet">Giỏ hàng</h1>
            </div>
            <div class="row">

                <div class="col-md-8 col-sm-12 col-xs-12 listItem">
                    <div class="table-cart-area">

                        <table class="table table-cart">
                            <tbody>

                                <tr>
                                    <th class="product">Sản phẩm</th>
                                    <th class="qty">Số lượng</th>
                                    <th class="linePrice">Tổng tiền</th>
                                    <th class="remove">Xóa</th>
                                </tr>
                                @foreach(var item in Model)
                                    {
                                    <tr class="cartItem" data-id="1073641097">
                                        <td class="product">
                                           
                                                <div class="thumb-cart">

                                                    <img src="@Url.Action("Picture" , "Sanphams", new {item.Sanpham.Mã_SP })" width="100px" height="100px" alt="">
                                                    <h4>
                                                        <a href="@Url.Action("Details", "Sanphams",new {id=item.Sanpham.Mã_SP })" >@item.Sanpham.Tên_món_ăn</a>
                                                    </h4>

                                                    <span>@item.Sanpham.Giá_tiền.ToString("N0") vnđ</span>
                                                </div>
                                            
                                        </td>
                                        <td class="qty">
                                            <div class="qty-number">
                                                <input type="button" value="<" class="qtyminus" field="quantity">
                                                <input type="text"  name="quantity" min="1" id="updates_1073641097" value="@item.Số_lượng" onfocus="this.select();" class="tc item-quantity qty">
                                                <input type="button" value=">" class="qtyplus" field="quantity">
                                            </div>
                                        </td>
                                        <td class="linePrice">
                                            <b>@((item.Sanpham.Giá_tiền * @item.Số_lượng).ToString("N0")) vnđ</b>
                                        </td>
                                        <td class="remove">
                                            <a class="remove-item" href="/cart/change?line=1&amp;quantity=0" data-id="1073641097"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                        </td>
                                    </tr>

                                }
                                

                            </tbody>
                        </table>
                        <div class="note_item">
                            <div class="note_cart">
                                <a class="control-label" href="@Url.Action("Index2", "Sanphams")">Tiếp tục mua</a>
                               
                            </div>
                        </div>
                        <div class="calculate-area">
                            <div class="ct-ft-cart">
                                <div class="total-cart">
                                    <div class="subtotal">
                                        Tổng tiền <b>320,000₫</b>
                                    </div>
                                    <div class="final-total text-center">
                                        <a href="/checkout" class="update-cart">Thanh toán</a>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
